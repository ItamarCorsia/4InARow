<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
            android:background="@color/material_grey_600"

    android:id="@+id/ll"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/material_grey_800">
       <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tb"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/material_grey_300">
        <ImageView
         android:layout_width="50px"
         android:layout_height="50px"
         android:background="@drawable/red_disc"/>
        <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/tvPlayer1"
         android:textSize="35px"
         android:textColor="@android:color/black"
         android:paddingLeft="10px"/>
        <ImageButton
         android:layout_width="50px"
         android:layout_height="50px"
         android:layout_marginLeft="80px"
         android:background="@drawable/yellow_disc"
         android:paddingLeft="10px"/>
        <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/tvPlayer2"
         android:textColor="@android:color/black"
         android:paddingLeft="20px"
         android:textSize="35px"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="700px"
        android:layout_height="700px"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        
        <LinearLayout
        android:layout_width="100px"
        android:layout_height="700px"
        android:orientation="vertical"
        android:id="@+id/llMainLayout1">

        </LinearLayout>
        <LinearLayout
        android:layout_width="100px"
        android:layout_height="700px"
        android:orientation="vertical"
        android:id="@+id/llMainLayout2">
        </LinearLayout>
        <LinearLayout
        android:layout_width="100px"
        android:layout_height="700px"
        android:orientation="vertical"
        android:id="@+id/llMainLayout3">
        </LinearLayout>
        <LinearLayout
        android:layout_width="100px"
        android:layout_height="700px"
        android:orientation="vertical"
        android:id="@+id/llMainLayout4">
        </LinearLayout>
        <LinearLayout
        android:layout_width="100px"
        android:layout_height="700px"
        android:orientation="vertical"
        android:id="@+id/llMainLayout5">
        </LinearLayout>
        
        <LinearLayout
        android:layout_width="100px"
        android:layout_height="700px"
        android:orientation="vertical"
        android:id="@+id/llMainLayout6">
        </LinearLayout>
        <LinearLayout
        android:layout_width="100px"
        android:layout_height="700px"
        android:orientation="vertical"
        android:id="@+id/llMainLayout7">
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/black">
        <Button
            android:id="@+id/btnAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnAccount"
            android:backgroundTint="@color/material_grey_800"
            android:textSize="50px"/>
        
        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="reset"
            android:textSize="50px"
            android:backgroundTint="@color/material_grey_800"/>       
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:gravity="center"
            android:text=""
            android:textSize="35sp"
            android:id="@+id/tvDisplay"
         />
        <ImageView
        android:layout_centerInParent="true"
        android:src="@drawable/red_disc"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView1" />
    <Button
        android:layout_centerInParent="true"
        android:layout_below="@id/imageView1"
        android:id="@+id/button"
        android:textSize="40px"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/material_grey_800"     
        android:text="flip" />
</LinearLayout>