<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_600"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:orientation="vertical"
        android:background="@color/material_grey_800">
        <Button
            android:id="@+id/btnBackActivity"
            android:layout_width="150px"
            android:layout_height="80px"
            android:text="@string/btnBack"
            android:textSize="22px"
            android:layout_gravity="right"
            android:backgroundTint="@color/material_grey_850"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvProfile"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="90px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/etUsername"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="30px"/>
        <EditText
            android:id="@+id/etName"
            android:layout_height="80px"
            android:layout_width="400px"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:background="@color/material_grey_800"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/etEmail"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="30px"/>
        <EditText
            android:id="@+id/etMail"
            android:layout_height="80px"
            android:layout_width="400px"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@color/material_grey_800"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/etPassword"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="30px"/>
        <EditText
             android:id="@+id/etPwd"
            android:layout_width="400px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:inputType="text"
            android:background="@color/material_grey_800"/>
    </LinearLayout>
    
</LinearLayout>