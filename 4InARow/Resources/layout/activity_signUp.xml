<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/material_grey_600">
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:orientation="vertical"
        android:background="@color/material_grey_800">
        <Button
        android:id="@+id/btnBackActivity"
        android:layout_width="150px"
        android:layout_height="80px"
        android:text="@string/btnBack"
        android:textSize="22px"
        android:layout_gravity="right"
        android:backgroundTint="@color/material_grey_850"/>      
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSignUp"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="80px"/>
    </LinearLayout>       
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/etUserName"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:hint="@string/etUsername"
            android:inputType="text" />        
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:hint="@string/etEmail"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:hint="@string/etPassword"
            android:inputType="textPassword" />
    </LinearLayout>
    <Button
        android:id="@id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSignUp"
        android:layout_gravity="center"
        android:backgroundTint="@color/material_grey_800"/>  
</LinearLayout>